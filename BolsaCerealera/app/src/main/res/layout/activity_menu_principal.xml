<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootRL"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/trigofondo">

    <Button
        android:id="@+id/btnCotizaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Cotizaciones"
        android:textColor="@android:color/black"
        android:textSize="40sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnMovimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnCotizaciones"
        android:layout_alignStart="@+id/btnCotizaciones"
        android:layout_below="@+id/btnCotizaciones"
        android:layout_marginTop="38dp"
        android:text="Movimiento"
        android:textColor="@android:color/black"
        android:textSize="40sp"
        android:layout_alignRight="@+id/btnCotizaciones"
        android:layout_alignEnd="@+id/btnCotizaciones" />

    <Button
        android:id="@+id/btnNoticias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="51dp"
        android:text="Mi Bolsillo"
        android:textColor="@android:color/black"
        android:textSize="40sp"
        android:layout_below="@+id/btnMovimiento"
        android:layout_alignLeft="@+id/btnMovimiento"
        android:layout_alignStart="@+id/btnMovimiento"
        android:layout_alignRight="@+id/btnMovimiento"
        android:layout_alignEnd="@+id/btnMovimiento" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnNoticias"
        android:layout_alignStart="@+id/btnNoticias"
        android:layout_below="@+id/btnNoticias"
        android:layout_marginTop="46dp"
        android:text="Agronoticias"
        android:textColor="@android:color/black"
        android:textSize="40sp" />

</RelativeLayout>